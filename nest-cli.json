{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "no-nest/assets/**/*", "watchAssets": true },
      { "include": "no-nest/css/**/*", "watchAssets": true },
      { "include": "no-nest/public/**/*", "watchAssets": true }
    ]
  }
}
